# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{java,md,xhtml,css,js}]
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[Jenkinsfile,pom.xml]
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[**/serenity-showcase/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
