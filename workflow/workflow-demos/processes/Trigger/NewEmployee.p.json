        { "id" : "f6", "to" : "f5" }
      ]
    }, {
      "id" : "f5",
      "type" : "DialogCall",
      "name" : [
        "Enter new employees",
        "personal data"
      ],
      "config" : {
        "dialog" : "workflow.trigger.CreateNewEmployee:start(workflow.trigger.NewEmployeeData)",
        "output" : {
          "map" : {
            "out" : "result.newEmployeeData"
          }
        }
      },
      "visual" : {
        "at" : { "x" : 248, "y" : 224 },
        "size" : { "width" : 144, "height" : 60 }
