<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>ch.ivyteam.ivy.project</groupId>
		<artifactId>build.maven.iar.web.test</artifactId>
		<version>7.1.0-SNAPSHOT</version>
		<relativePath>../../build.maven/iar/web.test</relativePath>
	</parent>

	<groupId>ch.ivyteam.ivy.project.demo</groupId>
	<artifactId>WorkflowDemosTest</artifactId>
	<version>7.1.0-SNAPSHOT</version>
	<packaging>iar</packaging>

	<properties>
		<selenium.version>2.48.1</selenium.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>ch.ivyteam.ivy.project.demo</groupId>
			<artifactId>WorkflowDemos</artifactId>
			<version>[6.1.0-SNAPSHOT,)</version>
			<type>iar</type>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>com.axonivy.ivy.ci</groupId>
				<artifactId>project-build-plugin</artifactId>
				<extensions>true</extensions>
				<executions>
					<execution>
						<id>deploy.workflowdemos.under.test.to.memory.engine</id>
						<goals>
							<goal>deploy-to-engine</goal>
						</goals>
						<phase>integration-test</phase>
						<configuration>
							<deployIarFile>${ch.ivyteam.ivy.project.demo:WorkflowDemos:iar}</deployIarFile>
						</configuration>
					</execution>
					<execution>
						<id>deploy.workflowdemos.test.to.memory.engine</id>
						<goals>
							<goal>deploy-to-engine</goal>
						</goals>
						<phase>integration-test</phase>
						<configuration>
							<deployIarFile>${ch.ivyteam.ivy.project.demo:WorkflowDemosTest:iar}</deployIarFile>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
