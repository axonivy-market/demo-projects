<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>ch.ivyteam.ivy.project</groupId>
		<artifactId>build.maven.iar.web.test</artifactId>
		<version>7.3.0-SNAPSHOT</version>
		<relativePath>../../build.maven/iar/web.test</relativePath>
	</parent>

	<groupId>ch.ivyteam.ivy.project.demo</groupId>
	<artifactId>workflow-demos-test</artifactId>
	<version>7.3.0-SNAPSHOT</version>
	<packaging>iar</packaging>

	<dependencies>
		<dependency>
			<groupId>ch.ivyteam.ivy.project.demo</groupId>
			<artifactId>workflow-demos</artifactId>
			<version>[7.3.0-SNAPSHOT,)</version>
			<type>iar</type>
		</dependency>
	</dependencies>

	<build>
		<outputDirectory>classes</outputDirectory>
	
		<plugins>
			<plugin>
				<groupId>com.axonivy.ivy.ci</groupId>
				<artifactId>project-build-plugin</artifactId>
				<extensions>true</extensions>
				<executions>
					<execution>
						<id>deploy.workflowdemos.under.test.to.memory.engine</id>
						<goals>
							<goal>deploy-to-engine</goal>
						</goals>
						<phase>integration-test</phase>
						<configuration>
							<deployFile>${ch.ivyteam.ivy.project.demo:workflow-demos:iar}</deployFile>
						</configuration>
					</execution>
					<execution>
						<id>deploy.workflowdemos.test.to.memory.engine</id>
						<goals>
							<goal>deploy-to-engine</goal>
						</goals>
						<phase>integration-test</phase>
						<configuration>
							<deployFile>${ch.ivyteam.ivy.project.demo:workflow-demos-test:iar}</deployFile>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
