<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.ivyteam.ivy.project.demo</groupId>
	<artifactId>connectivity-demos-test</artifactId>
	<version>6.1.1-SNAPSHOT</version>
	<packaging>iar</packaging>

	<dependencies>
		<dependency>
			<groupId>ch.ivyteam.ivy.project.demo</groupId>
			<artifactId>connectivity-demos</artifactId>
			<version>[6.1.1-SNAPSHOT,)</version>
			<type>iar</type>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.assertj</groupId>
			<artifactId>assertj-core</artifactId>
			<version>3.2.0</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
			<version>2.53.0</version>
			<scope>test</scope>
		</dependency>
		<dependency>
		    <groupId>org.seleniumhq.selenium</groupId>
		    <artifactId>htmlunit-driver</artifactId>
		    <version>2.20</version>
		    <scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.glassfish.jersey.core</groupId>
			<artifactId>jersey-client</artifactId>
			<version>2.22.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<properties>
		<test.application>Portal</test.application>
	</properties>

	<build>
		<testSourceDirectory>src_test</testSourceDirectory>
		<outputDirectory>classes</outputDirectory>
		<testOutputDirectory>classes</testOutputDirectory>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.19.1</version>
				<executions>
					<execution>
						<id>default-test</id>
						<phase>integration-test</phase>
						<configuration>
							<includes>
								<include>**/IntegrationTest*.java</include>
							</includes>
						</configuration>
					</execution>
					<execution>
						<id>selenium-tests</id>
						<phase>integration-test</phase>
						<goals><goal>test</goal></goals>
						<configuration>
							<includes>
								<include>**/WebTest*.java</include>
							</includes>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<argLine>
						-Dtest.engine.url=${test.engine.url}
						-Dtest.engine.app=${test.application}
					</argLine>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.axonivy.ivy.ci</groupId>
				<artifactId>project-build-plugin</artifactId>
				<extensions>true</extensions>
				<executions>
					<execution>
						<id>start.test.engine</id>
						<goals><goal>start-test-engine</goal></goals>
						<phase>pre-integration-test</phase>
					</execution>
					<execution>
						<id>deploy.project.under.test</id>
						<goals><goal>deploy-iar</goal></goals>
						<phase>pre-integration-test</phase>
						<configuration>
							<deployIarFile>${ch.ivyteam.ivy.project.demo:connectivity-demos:iar}</deployIarFile>
						</configuration>
					</execution>
					<execution>
						<id>deploy.myself</id>
						<goals><goal>deploy-iar</goal></goals>
						<phase>pre-integration-test</phase>
					</execution>
					<execution>
						<id>stop.test.engine</id>
						<goals><goal>stop-test-engine</goal></goals>
						<phase>post-integration-test</phase>
					</execution>
				</executions>
				<configuration>
					<deployToEngineApplication>${test.application}</deployToEngineApplication>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.10</version>
				<executions>
					<execution>
						<id>share.dependencies.as.property.for.iar.deployment</id>
						<goals>
							<goal>properties</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
	<parent>
		<groupId>ch.ivyteam.ivy.project</groupId>
		<artifactId>build.maven.iar</artifactId>
		<version>6.1.0-SNAPSHOT</version>
		<relativePath>../../build.maven/iar</relativePath>
	</parent>
</project>
