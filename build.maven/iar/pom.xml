<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.ivyteam.ivy.project</groupId>
	<artifactId>build.maven.iar</artifactId>
	<packaging>pom</packaging>

	<parent>
		<groupId>ch.ivyteam.ivy.project</groupId>
		<artifactId>build.maven</artifactId>
		<version>8.0.0-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>

	<properties>
		<antrun.version>1.7</antrun.version>
		<project.build.plugin.version>8.0.1</project.build.plugin.version>
		<maven.dependency.plugin.version>3.0.2</maven.dependency.plugin.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>com.axonivy.ivy.ci</groupId>
				<artifactId>project-build-plugin</artifactId>
				<version>${project.build.plugin.version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>${antrun.version}</version>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.axonivy.ivy.ci</groupId>
					<artifactId>project-build-plugin</artifactId>
					<version>[8.0.0,)</version>
					<extensions>true</extensions>
					<configuration>
						<skipScriptValidation>true</skipScriptValidation>
						<ivyVersion>[8.0.0,]</ivyVersion>
						<engineDirectory>${engine.directory}</engineDirectory>
						<iarFileSets>
							<iarFileSet>
								<directory>target/ivy</directory>
								<includes>
									<include>pom.xml</include><!-- include modified pom.xml (see antrun below) -->
								</includes>
							</iarFileSet>
							<iarFileSet>
								<includes>
									<!-- yet target is default excluded unless explicitly whitelisted -->
									<include>target/classes/**/*</include>
								</includes>
							</iarFileSet>
						</iarFileSets>
						<iarIncludesEmptyDirs>false</iarIncludesEmptyDirs>
						<compilerWarnings>true</compilerWarnings>
						<skipDeploy>${maven.test.skip}</skipDeploy>
						<skipScriptValidation>false</skipScriptValidation><!-- ivyScripts in processes -->
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-antrun-plugin</artifactId>
					<version>[1.7,)</version>
					<dependencies>
						<dependency>
							<!-- This dependency is not available in a public maven repository: it was manually installed to repository build.integration@zugprobld.
							     download-location: http://www.oopsconsultancy.com/software/xmltask/
							     build.integration-installation: use the archiva web interface to add the artifact. [login] -> [upload artifact]
							       - repositoryId = build.integration
							       - groupId = com.oopsconsultancy
							       - artifactId = xmltask
							       - version = 1.16
							       - packaging = jar
							       - generate Maven Pom = true
							       - choose File -> attach downlaoded JAR from http://www.oopsconsultancy.com/software/xmltask/
							     local-installation-command : mvn install:install-file -Dfile=xmltask.jar -DgroupId=com.oopsconsultancy -DartifactId=xmltask -Dversion=1.16 -->
							<groupId>com.oopsconsultancy</groupId>
							<artifactId>xmltask</artifactId>
							<version>1.16</version>
							<type>jar</type>
							<scope>compile</scope>
						</dependency>
					</dependencies>
					<executions>
						<execution>
							<id>hide.build.details.at.pom.xml</id>
							<goals><goal>run</goal></goals>
							<phase>prepare-package</phase>
							<configuration>
								<target>
									<echo message="Modifying POM.xml: remove &lt;build&gt; &amp; &lt;parent&gt; config entry." />
									<mkdir dir="${project.build.directory}/ivy" />
									<taskdef name="xmltask" classname="com.oopsconsultancy.xmltask.ant.XmlTask"
										classpathref="maven.plugin.classpath" />
									<xmltask source="${project.basedir}/pom.xml" dest="${project.build.directory}/ivy/pom.xml"
										preserveType="true" indent="false">
										<remove path="/:project/:parent" />
										<insert path="/:project/:build/:plugins/:plugin[:artifactId/text()='project-build-plugin']" >
											<![CDATA[
												<version>${project.build.plugin.version}</version>
											]]>
										</insert>
									</xmltask>
								</target>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-dependency-plugin</artifactId>
					<version>${maven.dependency.plugin.version}</version>
					<executions>
						<execution>
							<id>thirdparty.libs</id>
							<phase>process-resources</phase>
							<goals>
								<goal>copy-dependencies</goal>
							</goals>
							<configuration>
								<outputDirectory>lib</outputDirectory>
							</configuration>
						</execution>
					</executions>
					<configuration>
						<overWriteReleases>false</overWriteReleases>
						<overWriteSnapshots>false</overWriteSnapshots>
						<overWriteIfNewer>false</overWriteIfNewer>
						<stripVersion>false</stripVersion>
						<excludeArtifactIds>${project.artifactId},${project.artifactId}.source</excludeArtifactIds>
					</configuration>
				</plugin>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-dependency-plugin
										</artifactId>
										<versionRange>
											[2.1.0,)
										</versionRange>
										<goals>
											<goal>
												copy-dependencies
											</goal>
											<goal>
												properties
											</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
