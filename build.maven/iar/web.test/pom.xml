<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.ivyteam.ivy.project</groupId>
	<artifactId>build.maven.iar.web.test</artifactId>
	<packaging>pom</packaging>

	<parent>
		<groupId>ch.ivyteam.ivy.project</groupId>
		<artifactId>build.maven.iar</artifactId>
		<version>7.1.0-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>

	<properties>
		<selenium.version>3.5.3</selenium.version>
		<test.application>Portal</test.application>
		<gecko.driver.dir>${basedir}/drivers</gecko.driver.dir>
	</properties>

	<dependencies>
		<dependency>
			<!-- required: test framework used by the maven-surefire-plugin to run tests -->
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<!-- required: for web browser based testing -->
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
			<version>${selenium.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<!-- fluid junit assertions -->
			<groupId>org.assertj</groupId>
			<artifactId>assertj-core</artifactId>
			<version>3.5.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<!-- simplify primefaces component tests -->
			<groupId>com.axonivy.ivy.supplements</groupId>
			<artifactId>primeui-tester</artifactId>
			<version>0.0.4-SNAPSHOT</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<testSourceDirectory>src_test</testSourceDirectory>
		<testOutputDirectory>classes</testOutputDirectory>

		<plugins>
			<plugin>
				<groupId>com.axonivy.ivy.ci</groupId>
				<artifactId>project-build-plugin</artifactId>
				<extensions>true</extensions>
				<executions>
					<execution>
						<id>start.test.engine</id>
						<goals><goal>start-test-engine</goal></goals>
						<phase>pre-integration-test</phase>
					</execution>
					<execution>
						<id>stop.test.engine</id>
						<goals><goal>stop-test-engine</goal></goals>
						<phase>post-integration-test</phase>
					</execution>
				</executions>
				<configuration>
					<deployToEngineApplication>${test.application}</deployToEngineApplication>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.19.1</version>
				<executions>
					<execution>
						<id>selenium.web.tests</id>
						<phase>integration-test</phase>
						<goals><goal>test</goal></goals>
						<configuration>
							<includes>
								<include>**/WebTest*.java</include>
							</includes>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<argLine>
						-Dtest.engine.url=${test.engine.url}
						-Dtest.engine.app=${test.application}
						-Dgecko.driver.dir=${gecko.driver.dir}
					</argLine>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.10</version>
				<executions>
					<execution>
						<id>share.dependencies.as.property.for.iar.deployment</id>
						<goals>
							<goal>properties</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>com.github.webdriverextensions</groupId>
				<artifactId>webdriverextensions-maven-plugin</artifactId>
				<version>3.1.3</version>
				<executions>
					<execution>
						<id>install.gecko.driver</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>install-drivers</goal>
						</goals>
						<configuration>
							<drivers>
								<driver>
									<name>geckodriver</name>
									<bit>64</bit>
									<version>0.21.0</version>
								</driver>
							</drivers>
							<installationDirectory>${gecko.driver.dir}</installationDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-deploy-plugin</artifactId>
					<version>2.8</version>
					<configuration>
						<skip>true</skip>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<profiles>
		<profile>
			<id>ivy.package.deb64</id>
			<activation>
				<os>
					<name>Linux</name>
				</os>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>exec-maven-plugin</artifactId>
						<groupId>org.codehaus.mojo</groupId>
						<version>1.6.0</version>
						<executions>
							<execution>
								<id>make.driver.executable</id>
								<phase>pre-integration-test</phase>
								<goals><goal>exec</goal></goals>
								<configuration>
									<executable>chmod</executable>
									<arguments>
										<argument>+x</argument>
										<argument>${gecko.driver.dir}/geckodriver-linux-64bit</argument>
									</arguments>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
