pipeline {
  agent {
    docker {
      image 'axonivy/build-container:rcptt-1.1'
    }
  }

  parameters {
    string(
      name: 'designerListUrl',
      description: 'Designer to use for build',
      defaultValue: 'https://jenkins.ivyteam.io/job/ivy-core_product/job/release%2F8.0/lastSuccessfulBuild/'
    )
  }

  options {
    buildDiscarder(logRotator(numToKeepStr: '20'))
  }

  triggers {
    cron '@midnight'
  }

  stages {
    stage('test') {
      steps {
        script {
          dir('connectivity/connectivity-demos-rcptt-test')
          {
            maven cmd: "clean test -Dmaven.test.failure.ignore=true -Dbuild.last.sucess.url=${designerListUrl}"
            junit testDataPublishers: [[$class: 'StabilityTestDataPublisher']], testResults: '**/target/surefire-reports/**/*.xml'
            archiveArtifacts 'target/aut/logs/,' +
                            'target/results/**'
          }
        }
      }
    }
  }
}
